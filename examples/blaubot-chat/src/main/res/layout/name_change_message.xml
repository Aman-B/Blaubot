<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/name_change_message_timestamp"
        style="@style/ChatTimeStampTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name_change_message_oldName"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        style="@style/ChatOriginatorTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/ChatTimeStampTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/name_change_message_changed_name_to" /> 

    <TextView
        android:id="@+id/name_change_message_newName"
        style="@style/ChatOriginatorTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
